<div class="booyah-box col-10 offset-1">
  <h2><%= @game.name %></h2>
</div>
<head>
    <meta charset="UTF-8">
</head>

<body>
  <div class="chessboard" id=<%= "#{@game.id}" %>>
    <% for row in (1..8) %>
      <% for col in (1..8) %>
        <div class="square
          <% if row % 2 != 0 %>
            <%= col % 2 != 0 ? 'black' : 'white' %>
          <% else %>
            <%= col % 2 == 0 ? 'black' : 'white' %>
          <% end %>"
          data-x=<%= "#{col}" %>
          data-y=<%= "#{9 - row}" %>
          <% piece = @game.pieces.active.find_by( { x: col , y: 9 - row } ) %>
          data-piece-id=
          <% if piece %>
            "<%= piece.id %>"
          <% else %>
            "<%= '' %>"
          <% end %>
          id=<%= "#{col}-#{9 - row}" %>
          >
          <% if piece %>
            <%= "#{piece.icon}" %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</body>

